<header class='row'>
  <div class="col-md-8 col-md-offset-2">
    <div class="logo-container">
      <a class='logo' href='/'>Duo Table</a>
    </div>
  </div>
</header>

<div class='post-container'>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1><%- page.title %></h1>
      <div class='text-muted'>
        <%= date(page.date, config.date_format) %>
      </div>
      <div class="content">
        <%- page.content %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="separator">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <% if (page.ingredients) { %>
      <h2>Ingredients</h2>
      <ul>
        <% for (var i=0; page.ingredients.length > i; i++){ %>
        <li><%- page.ingredients[i] %></li>
        <% } %>
      </ul>
      <% } %>
      <% if (page.ingredients2_title) { %>
        <h3><%= page.ingredients2_title %></h3>
        <ul>
          <% for (var i=0; page.ingredients2.length > i; i++){ %>
          <li><%- page.ingredients2[i] %></li>
          <% } %>
        </ul>
      <% } %>
    </div>
    <div class="col-md-4">
      <% if (page.prepare_steps) { %>
      <div class="prepare-section">
        <h2>To prepare</h2>
        <ul>
          <% for (var i=0; page.prepare_steps.length > i; i++){ %>
            <li><%- page.prepare_steps[i] %></li>
          <% } %>
        </ul>
      </div>
      <% } %>
      <% if (page.cook_steps) { %>
      <div class="cook-section">
        <h2>To cook and serve</h2>
        <ul>
          <% for (var i=0; page.cook_steps.length > i; i++){ %>
            <li><%- page.cook_steps[i] %></li>
          <% } %>
        </ul>
      </div>
      <% } %>
    </div>
  </div>

</div>
